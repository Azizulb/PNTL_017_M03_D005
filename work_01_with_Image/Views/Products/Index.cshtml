@model IEnumerable<work_01_with_Image.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-end text-right row">
    <a asp-action="Create" asp-controller="Products" class="btn btn-outline-primary btn-sm">Add New</a>
</div>
<div class="row">
    <div class="col">
        <h2>Product List</h2>
        <table class="table table-bordered table-striped table-sm">
            <thead class="table-primary">
                <tr>
                    <th>@Html.DisplayNameFor(x => x.Name)</th>
                    <th>@Html.DisplayNameFor(x => x.Unit)</th>
                    <th>@Html.DisplayNameFor(x => x.Price)</th>
                    <th>@Html.DisplayNameFor(x => x.Image)</th>
                    <th>@Html.DisplayNameFor(x => x.ImageFile)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(x => item.Name)</td>
                    <td>@Html.DisplayFor(x => item.Unit)</td>
                    <td>@Html.DisplayFor(x => item.Price)</td>
                    <td>
                        @{ 
                            var b64 = Convert.ToBase64String(item.Image);
                            var imgSrc = String.Format("data:image/jpg;base64,{0}", b64);
                        }
                        <img src="@imgSrc" alt="Product image" width="50"/>
                    </td>
                    <td>@Html.DisplayFor(x => item.ImageFile)</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
